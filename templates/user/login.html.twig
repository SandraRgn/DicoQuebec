{% extends 'layout.html.twig' %}

{% block title %} Connexion | {{ parent() }} {% endblock %}

{% block main %}
    <h1 class="centre">Connexion</h1>

    {% if lastError %}
        <div class="alert alert-danger">Mauvais identifiants</div>
    {% endif %}
    <form method="post">
        <div class="form-group">
            <label for="username">Pseudo</label>
            <input type="text" name="_username" class="form-control" id="text" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="_password" id="password">
        </div>

        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" checked />
            <label for="remember_me">Se rappeler de moi</label>
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>


{% endblock %}